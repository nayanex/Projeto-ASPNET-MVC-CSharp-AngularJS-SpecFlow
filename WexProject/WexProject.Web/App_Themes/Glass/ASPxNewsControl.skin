<%@ Register TagPrefix="dx" Namespace="DevExpress.Data" Assembly="DevExpress.Data.v11.2, Version=11.2.8.0, Culture=neutral, PublicKeyToken=b88d1754d700e49a" %>
<%@ Register TagPrefix="dxnc" Namespace="DevExpress.Web.ASPxNewsControl" Assembly="DevExpress.Web.v11.2, Version=11.2.8.0, Culture=neutral, PublicKeyToken=b88d1754d700e49a" %>

<dxnc:ASPxNewsControl runat="server" CssFilePath="~/App_Themes/Glass/{0}/styles.css" PagerPanelSpacing="20px" CssPostfix="Glass" SpriteCssFilePath="~/App_Themes/Glass/{0}/sprite.css">
    <ItemDateStyle Spacing="2px"></ItemDateStyle>
    <PagerStyle ItemSpacing="2px" Spacing="2px"></PagerStyle>
    <Border BorderWidth="1px" BorderStyle="Solid" BorderColor="Silver"></Border>
	
	<BackToTopImage>
		<SpriteProperties CssClass="dxWeb_ncBackToTop_Glass" />
	</BackToTopImage>	

    <ItemSettings>
		<TailImage>
			<SpriteProperties CssClass="dxWeb_ncTail_Glass" />
		</TailImage>	
    </ItemSettings>

    <LoadingPanelImage Url="~/App_Themes/Glass/Web/Loading.gif"></LoadingPanelImage>
    <PagerSettings CurrentPageNumberFormat="{0}" ShowDefaultImages="True">
        <FirstPageButton Text="" Visible="True">
        </FirstPageButton>

        <Summary AllPagesText="" Text=""></Summary>

        <LastPageButton ImagePosition="Left" Text="" Visible="True">
        </LastPageButton>

        <NextPageButton Visible="True" Text="">
        </NextPageButton>

        <PrevPageButton Visible="True" Text="">
        </PrevPageButton>
    </PagerSettings>
    <PagerStyle ItemSpacing="4px" Spacing="4px"/>
</dxnc:ASPxNewsControl>

